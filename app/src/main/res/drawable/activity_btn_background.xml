<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- unselected state and pressed state -->
    <item android:state_selected="false" android:state_pressed="true"
        android:drawable="@drawable/activity_btn_pressed" />
    <!-- selected state and pressed state -->
    <item android:state_selected="true" android:state_pressed="true"
        android:drawable="@drawable/activity_btn_normal" />
    <!-- selected state -->
    <item android:state_selected="true"
        android:drawable="@drawable/activity_btn_pressed" />
    <!-- focused state -->
    <item android:state_focused="true"
        android:drawable="@drawable/activity_btn_focused" />
    <!-- normal state -->
    <item  android:state_focused="false"
        android:drawable="@drawable/activity_btn_normal" />
</selector>